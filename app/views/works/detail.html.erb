	  	  var img = $("#icon_play");
		  $('#btn_preview').on("click",function(){
		    if(img.attr('src') === "/assets/play_FAFAFA.svg")
		     {	       		       
		       img.attr("src","/assets/pause_FAFAFA.svg");
		       audio.play();
		     }
		    else
		     {
		       img.attr("src","/assets/play_FAFAFA.svg");
		       audio.pause();
		     }
		  });
		  audio.onended = function() {
		  	img.attr("src","/assets/pause_FAFAFA.svg");
		  };
	  	});				
   	</script>
