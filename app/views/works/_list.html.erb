<% if @list = List.find_by(user_id: current_user.id, title: "プロフィール") %>
    <% if @list_item = ListItem.find_by(list_id: @list.id, post_id: post.id) %>
    	<%= link_to "/works/#{post.id}/destroy_list", method: :post, remote: true do %>
			<div class="btn_pushbar_item">  
				<%= image_tag "eye_blue.png", :style =>'width:16px;height:16px;margin-top:-2px;margin-right:10px;' %>プロフィールの設定を解除する
			</div>
		<% end %>
    <% else %>
    	<%= link_to "/works/#{post.id}/create_list", method: :post, remote: true do %>
			<div class="btn_pushbar_item">  
				<%= image_tag "eye_white.png", :style =>'width:16px;height:16px;margin-top:-2px;margin-right:10px;' %>この投稿をプロフィールに設定する
			</div>
		<% end %>
    <% end %>
<% else %>
	<%= link_to "/works/#{post.id}/create_list", method: :post, remote: true do %>
		<div class="btn_pushbar_item">  
			<%= image_tag "eye_white.png", :style =>'width:16px;height:16px;margin-top:-2px;margin-right:10px;' %>この投稿をプロフィールに設定する
		</div>
	<% end %>
<% end %>