<% if user_signed_in? %>
<% else %>
	<%#ファーストビュー%>
	<div class="a1" style="height:calc(100% - 0px);">
		<div class="a14">
	      	<div class="d1">
	        	<div class="d2" style="background:rgba(12,12,12,1);"></div>
	      	</div>
	    </div>
	    <div class="a8" style="text-align:center;">
	      	<%= image_tag "tavore_logo_01.png", :style =>'width:100px;height:100px;' %>
	      	<div style="font-size:20px;margin-top:-5px;">
	        	TAVORE
	      	</div>
	      	<div style="height:5px;"></div>
	      	<div style="font-size:14px;margin-left:15px;opacity:0.9;">
	      		読む、観る、聴く。
	      	</div>
	      	<div style="height:40px;"></div>
	      	<div style="display:inline-block;margin-right:10px;">
				<a href="#" data-toggle="modal" data-target="#myModal_sign_in">
		          <div class="btn_session">
					ログイン
				  </div>
		        </a>
			</div>
			<div style="display:inline-block;margin-left:10px;">
				<a href="#" data-toggle="modal" data-target="#myModal_sign_up">
			        <div class="btn_register">
						アカウント作成
					</div>
		        </a>
			</div>
			<div style="height:80px;"></div>
	    </div>
	</div>

	<%#サインインモーダル%>
	<div class="modal bottom fade" id="myModal_sign_in">
	<div class="modal-dialog">
	  <div class="a1">
	    <div class="a4">
	      <div class="d1">
	        <div class="d2"></div>
	      </div>
	    </div>
	    <div class="a7">
	        <a href="#" data-toggle="modal" data-dismiss="modal" id="dismiss_sign_in">
	          <div style="padding:20px;">
	            <%= image_tag "cross_FAFAFA.svg", :style =>'width:16px;height:16px;opacity:0.4;' %>
	          </div>
	        </a>  
	    </div>
	    <div class="a8" style="text-align:center;"> 
	      <div class="font_white_big">
	        Sign in
	      </div>
	      <div class="gogo">
	        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	          <%= f.email_field :email,placeholder: "email", required: "", autofocus: true %>
	          <%= f.password_field :password,placeholder: "password", required: "" %>
	          <div style="height:3vh;"></div>
	          <%= f.submit "完了",class:"btn_session" %>
	        <% end %>
	      </div>  
	      <div style="height:4vh;"></div>
	      <div class="inline_block_middle">
	        <%= link_to new_user_password_path do %>
	          <div class="font_gray_min">
	            パスワードを忘れたら
	          </div>
	        <% end %>
	      </div>
	    </div>
	  </div>
	</div>
	</div>
	<%#モーダルtubolinks不具合修正(サインインモーダル)%>
	<script defer>
	$(function(){
	var display_post = $('#myModal_sign_in').css('display');
	//モーダルが表示されているのに表示判定されてなかったら
	if(display_post === 'block'){
	  //モーダルを表示状態にする
	  $('body').removeClass('modal-open');
	  $('.modal-backdrop').remove();
	  $('#myModal_sign_in').modal('toggle');
	  //クリックでモーダルを閉じる 
	  $('#dismiss_sign_in').on("click",function(){
	    $('body').removeClass('modal-open');
	    $('.modal-backdrop').remove();
	    $('#myModal_sign_in').modal('hide'); 
	  });
	}       
	});
	</script>
	<%#サインアップモーダル%>
	<div class="modal  bottom fade" id="myModal_sign_up">
	<div class="modal-dialog">
	  <div class="a1">
	    <div class="a4">
	      <div class="d1">
	        <div class="d2"></div>
	      </div>
	    </div>
	    <div class="a7">
	        <a href="#" data-toggle="modal" data-dismiss="modal" id="dismiss_sign_up">
	          <div style="padding:20px;">
	            <%= image_tag "cross_FAFAFA.svg", :style =>'width:16px;height:16px;opacity:0.4;' %>
	          </div>
	        </a>  
	    </div>
	    <div class="a8" style="text-align:center;">  
	    <div class="font_white_big">
	      Sign up
	    </div>
	    <div class="gogo">
	      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	        <%= f.text_field :name,placeholder: "name", required: "", autofocus: true %>
	        <%= f.email_field :email,placeholder: "email", required: "" %>
	        <%= f.password_field :password,placeholder: "password", required: "" %>
	        <%= f.password_field :password_confirmation,:placeholder => 'password confirmation', required: "" %>
	        <div style="height:2vh;"></div>
	        <%= f.submit "完了",class:"btn_session" %>
	      <% end %>
	    </div>
	    <div style="height:2vh;"></div>
	    <div class="font_gray_min" style="padding:0 14%;text-align:left;">
	      アカウントを作成することで,TAVOREの
	      <%= link_to "/users/terms" do %>
	        利用規約
	      <% end %>
	      と
	      <%= link_to "/users/policy" do %>
	        プライバシーポリシー
	      <% end %>
	      に同意されたものとします。
	    </div>      
	  </div>
	</div>
	</div>
	<%#モーダルtubolinks不具合修正(サインインモーダル)%>
	<script defer>
	$(function(){
	var display_post = $('#myModal_sign_up').css('display');
	//モーダルが表示されているのに表示判定されてなかったら
	if(display_post === 'block'){
	  //モーダルを表示状態にする
	  $('body').removeClass('modal-open');
	  $('.modal-backdrop').remove();
	  $('#myModal_sign_up').modal('toggle');
	  //クリックでモーダルを閉じる 
	  $('#dismiss_sign_up').on("click",function(){
	    $('body').removeClass('modal-open');
	    $('.modal-backdrop').remove();
	    $('#myModal_sign_up').modal('hide'); 
	  });
	}       
	});
	</script>
<% end %>