<div class="main">
	<div class="block_side">
	</div>
	<div class="block_main">

		<div style="height:50px;"></div>
		<% if @posts.present? %>
			<% @posts.each.with_index(1) do |post, i| %>
				<div class="base01">
					<% if post.image_url.blank? %>
						<%= image_tag "nothing01.jpg", :class =>'img_lavoro02' %>
					<% else %>
						<% if post.category == "music" %>
							<%= image_tag post.image_url, :class =>'img_lavoro002' %>
						<% else %>
							<%= image_tag post.image_url, :class =>'img_lavoro02' %>
						<% end %>
					<% end %>
					<span>
						<div class="layer05">
						</div>
						<div class="layer03">
							<div class="pro01">
								<% if post.user.image.blank?  %>
									<%= image_tag "user05.png", :class =>'img_user04' %>
								<% else %>
									<%= image_tag current_user.image, :class => "img_user04" %>
								<% end %>
							</div>
							<div class="pro02">
								<span class="font_white">
									<%= post.user.name %>
								</span>
								<br>
								<span class="font_white">
									<% if post.category == "movie" %>
										<i class="fas fa-film"></i> 映画
									<% end %>
									<% if post.category == "tv" %>
										<i class="fas fa-film"></i> テレビ
									<% end %>
									<% if post.category == "book" %>
										<i class="fas fa-book"></i> ブック
									<% end %>
									<% if post.category == "comic" %>
										<i class="fas fa-book"></i> コミック
									<% end %>
									<% if post.category == "music" %>
										<i class="fas fa-music"></i> ミュージック
									<% end %>
									 - <%= post.created_at.strftime('%Y/%m/%d') %>
								</span>
							</div>
							<div class="pro03">
								<div class="dropdown">
								  <div class="dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
								    <span class="font_white_max">
								    	<i class="fas fa-ellipsis-h"></i>
								    </span>
								  </div>
								  <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
								    <li><a href="#">投稿を編集</a></li>
								    <li><a href="#">削除</a></li>
								    <li><a href="#">共有</a></li>
								  </ul>
								</div>
							</div>
						</div>
						<div class="layer01">
							<% if post.image_url.blank? %>
								<%= image_tag "nothing01.jpg", :class =>'img_lavoro03' %>
							<% else %>
								<%= image_tag post.image_url, :class =>'img_lavoro03' %>
							<% end %>
						</div>
						<div class="layer02">
							<div class="font_how">
								<% if post.review == "favorite" %>
									<i class="fas fa-star" style="color:rgba(252,228,4,0.7);"></i> おすすめしています
								<% end %>
								<% if post.review == "good" %>
									観ました
								<% end %>
								<% if post.review == "bad" %>
									<i class="fas fa-ban" style="color:rgba(236,12,28,0.7);"></i> おすすめしていません
								<% end %>
							</div>
							<br>
							<div class="font_head">
								<%= post.title %>
							</div>
							<br>
							<div class="balloon">
							  	<%= simple_format(post.description, {}, wrapper_tag: "div") %>
							</div>
						</div>
					</span>
				</div>
			<% end %>
		<% end %>

	</div>
	<div class="block_side">
	</div>
</div>


<%#投稿ボタン%>
<div class="btns_plus">
	<a href="" data-toggle="modal" data-target="#myModal_post" id="btn_plus">
		<i class="fas fa-plus"></i>
	</a>
</div>	
<div class="modal fade" id="myModal_post">
	<div style="height:50px;"></div>
    <div class="modal-dialog">
    	<div class="base01">
			<%= image_tag "movie01.jpg", :class =>'img_lavoro04' %>
			<span>
				<div class="layer05">
				</div>
				<div class="layer06">
			  		<div class="">	
				  		<div style="font-size:24px;color:#FAFAFA;margin:0px 0px 20px;">
					      	投稿を作成
				        </div>
				  		<div style="display:inline-block;vertical-align:top;margin:20px 20px 0px;">
				  			<div>
						      	<%= link_to(works_movie_path, id: 'btn_option') do %>
						        	<i class="fas fa-film"></i>
						        <% end %>
					        </div>
					        <div style="font-size:14px;color:#777777;margin-top:2px;">
					        	映画
					        </div>
				        </div>
				        <div style="display:inline-block;vertical-align:top;margin:0px 20px 0px;">
				        	<div>
				        		<%= link_to(works_book_path, id: 'btn_option') do %>
						        	<i class="fas fa-book"></i>
						        <% end %>
						    </div>
					        <div style="font-size:14px;color:#777777;margin-top:2px;">
					        	ブック
					        </div>
				        </div>
				        <div style="display:inline-block;vertical-align:top;margin:20px 20px 0px;">
				        	<div>
						      	<%= link_to(works_music_path, id: 'btn_option') do %>
						        	<i class="fas fa-music"></i>
						        <% end %>
					        </div>
					        <div style="font-size:14px;color:#777777;margin-top:2px;">
					        	ミュージック
					        </div>
				        </div> 
			        </div>   
				</div>
			</span>
		</div>
    </div>
    <div class="btns_plus">
		<a href="" data-toggle="modal" data-dismiss="modal" id="btn_plus">
			<i class="fas fa-times"></i>
		</a>
	</div>	
</div>