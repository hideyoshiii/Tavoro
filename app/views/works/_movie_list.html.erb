<% if params[:q].present? %>
  <%#検索結果%>
  <% if @items.present? %>
    <% @items.each do |item| %>
      <% if item["media_type"] == "movie" || item["media_type"] == "tv" %>
        <%= form_tag(works_new_path, method: :get) do %>
        <%= hidden_field_tag :category, item["media_type"] %>
        <%= hidden_field_tag :id, item["id"] %>
          <button type="submit">
            <div style="text-align:left;margin:0 10px;padding:14px 5px;border-bottom:solid 0.5px rgba(150, 150, 150, 0.2);">
              <div class="inline_block_middle" style="width:20%;">
                <% if item["poster_path"].blank? %>
                  <img data-src="/assets/movie.jpg" class="img_tavore lazyload">
                <% else %>
                  <img data-src="https://image.tmdb.org/t/p/w154/<%= item.poster_path %>" class="img_tavore lazyload">
                <% end %>
              </div>
              <div class="inline_block_middle" style="width:75%;padding:0px 20px;">
                <div class="contain_title">
                  <div style="font-size:14px;color:#FAFAFA;font-weight:bolder;margin-top:2px;">
                    <% if item["media_type"] == "movie" %>
                      <%= item["title"] %>
                    <% end %> 
                    <% if item["media_type"] == "tv" %>
                      <%= item["name"] %>
                    <% end %>   
                  </div>
                </div>
                <div class="contain_title02">
                  <div style="font-size:12px;color:#FAFAFA;opacity:0.8;">
                    <% if item["media_type"] == "movie" %>
                      <%= item["release_date"].slice(0..3) %>
                    <% end %> 
                    <% if item["media_type"] == "tv" %>
                      <%= item["first_air_date"].slice(0..3) %>
                    <% end %>  
                  </div>
                </div>
              </div>
              <div class="inline_block_middle" style="width:5%;">
                <img data-src="/assets/right_C2C2C2.svg" class="lazyload" style="width:15px;height:15px;opacity:0.8;">
              </div>
            </div>
          </button>
        <% end %>
      <% end %> 
    <% end %>
  <% end %>
<% else %>
  <%#default%>
  <% if @defaults.present? %>
    <% @defaults.each do |item| %>
      <%= form_tag(works_new_path, method: :get) do %>
        <%= hidden_field_tag :category, "movie" %>
        <%= hidden_field_tag :id, item["id"] %>
        <button type="submit">
          <div style="text-align:left;margin:0 10px;padding:14px 5px;border-bottom:solid 0.5px rgba(150, 150, 150, 0.2);">
            <div class="inline_block_middle" style="width:20%;">
              <% if item["poster_path"].blank? %>
                <img data-src="/assets/movie.jpg" class="img_tavore lazyload">
              <% else %>
                <img data-src="https://image.tmdb.org/t/p/w154/<%= item.poster_path %>" class="img_tavore lazyload">
              <% end %>
            </div>
            <div class="inline_block_middle" style="width:75%;padding:0px 20px;">
              <div class="contain_title">
                <div style="font-size:14px;color:#FAFAFA;font-weight:bolder;margin-top:2px;">
                  <%= item["title"] %>  
                </div>
              </div>
              <div class="contain_title02">
                <div style="font-size:12px;color:#FAFAFA;opacity:0.8;">
                  <%= item["release_date"].slice(0..3) %>            
                </div>
              </div>
            </div>
            <div class="inline_block_middle" style="width:5%;">
              <img data-src="/assets/right_C2C2C2.svg" class="lazyload" style="width:15px;height:15px;opacity:0.8;">
            </div>
          </div>
        </button>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%#lazyload.js%>
<script defer>
  $(function() {
    $('img.lazyload').lazyload();
  });
</script>