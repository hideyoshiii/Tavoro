<% if params[:q].present? %>
  <%#検索結果%>
  <% if @items.present? %>
    <% @items.each do |item| %>
      <% if item["media_type"] == "movie" || item["media_type"] == "tv" %>
        <%= form_tag(works_movie_detail_path, method: :get) do %>
        <%= hidden_field_tag :type, item["media_type"] %>
        <%= hidden_field_tag :id, item["id"] %>
          <button type="submit">
            <div class="box_tests02">
              <div class="inline_block_middle" style="width:5%;">
                <% if item["poster_path"].blank? %>
                  <img data-src="/assets/nothing01.jpg" class="img_lavoro03 lazyload">
                <% else %>
                  <img data-src="https://image.tmdb.org/t/p/w154/<%= item.poster_path %>" class="img_lavoro03 lazyload">
                <% end %>
              </div>
              <div class="inline_block_middle" style="width:75%;padding:0px 20px;">
                <span class="font_white_big">
                  <% if item["media_type"] == "movie" %>
                    <%= item["title"] %>
                  <% end %> 
                  <% if item["media_type"] == "tv" %>
                    <%= item["name"] %>
                  <% end %>   
                </span>
                <br>
                <span class="font_gray">
                  <% if item["media_type"] == "movie" %>
                    <%= item["release_date"].slice(0..3) %>
                  <% end %> 
                  <% if item["media_type"] == "tv" %>
                    <%= item["first_air_date"].slice(0..3) %>
                  <% end %>  
                </span>
              </div>
              <div class="inline_block_middle" style="width:20%;">
                <span class="font_gray_max">
                  <i class="fas fa-chevron-right"></i>
                </span>
              </div>
            </div>
          </button>
        <% end %>
      <% end %> 
    <% end %>
  <% end %>
<% else %>
  <%#default%>
  <% if @defaults.present? %>
    <% @defaults.each do |item| %>
      <%= form_tag(works_movie_detail_path, method: :get) do %>
        <%= hidden_field_tag :type, "movie" %>
        <%= hidden_field_tag :id, item["id"] %>
        <button type="submit">
          <div class="box_tests02">
            <div class="inline_block_middle" style="width:20%;">
              <% if item["poster_path"].blank? %>
                <img data-src="/assets/nothing01.jpg" class="img_lavoro03 lazyload">
              <% else %>
                <img data-src="https://image.tmdb.org/t/p/w154/<%= item.poster_path %>" class="img_lavoro03 lazyload">
              <% end %>
            </div>
            <div class="inline_block_middle" style="width:75%;padding:0px 20px;">
              <span class="font_white_big">   
                <%= item["title"] %>  
              </span>
              <br>
              <span class="font_gray">
                <%= item["release_date"].slice(0..3) %>            
              </span>
            </div>
            <div class="inline_block_middle" style="width:5%;">
              <span class="font_gray_max">
                <i class="fas fa-chevron-right"></i>
              </span>
            </div>
          </div>
        </button>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%#lazyload.js%>
<script defer>
  $(function() {
    $('img.lazyload').lazyload();
  });
</script>