<% if params[:q].present? %>
  <% if @items.present? %>
    <% @items.each do |item| %>
      <%= form_tag(works_book_detail_path, method: :get) do %>
        <% if item["size"] == "コミック" %>
          <%= hidden_field_tag :type, "comic" %>
        <% else %>
          <%= hidden_field_tag :type, "book" %>
        <% end %>
        <%= hidden_field_tag :id, item["isbn"] %>
        <button type="submit">
          <div class="box_tests02">
            <div class="pro09">
              <% if item["largeImageUrl"].blank? %>
                <img data-src="/assets/nothing02.jpg" class="img_lavoro03 lazyload">
              <% else %>
                <% @image_url = item["largeImageUrl"] %>
                <% @image_url = @image_url.sub!(/_ex.*/m, "") %>
                <% @image_url = @image_url.chop! %>
                <img data-src="<%= @image_url %>" class="img_lavoro03 lazyload">
              <% end %>
            </div>
            <div class="pro10">
              <span class="font_white_big">
                <%= item["title"] %> 
              </span>
              <br>
              <span class="font_gray">
                <%= item["author"] %>
              </span>
            </div>
            <div class="pro11">
              <span class="font_gray_max">
                <i class="fas fa-chevron-right"></i>
              </span>
            </div>
          </div>
        </button>
      <% end %>
    <% end %>
  <% end %>
<% else %>
