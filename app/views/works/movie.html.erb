<%#インクリメンタルサーチjs%>
<script defer>
	$(function(){
		var
		preFunc = null,
		preInput = '',
		input = '',
		ajaxPost = function(input)
		{
		  $.ajax({
		    url: "ajax_movie_list",
		      type: "GET",
		      data: ("q=" + input)
		  });
		};
		$('#inc_search').on('input',function(){
		  input = $(this).val();   //前後の不要な空白を削除
		  if(preInput !== input){
		    clearTimeout(preFunc);
		    preFunc = setTimeout(ajaxPost(input), 800);
		  }
		  preInput = input;
		});
		$('#inc_search').keypress(function(e) {
			if ( e.which == 13 ) {
			// ここに処理を書く
			clearTimeout(preFunc);
		    preFunc = setTimeout(ajaxPost(input), 0);
			// スマホのキーボードを閉じる
			  $("#inc_search").blur();
			   return false;
			}
		})
	});
</script>