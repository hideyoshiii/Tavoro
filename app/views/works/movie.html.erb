<%#検索バー%>
<div class="bar_search" style="padding:5px 15px;">
	<div class="nmn inline_block_middle" style="text-align:center;width:100%;">
		<form action="#">
			<input id="inc_search" placeholder="検索" type="text" required="">
		</form>
	</div>
</div>
<div style="height:55px;"></div>

<%#検索結果%>
<div style="margin-top:-20px;"></div>		
<div id='movie_list'>
  <%= render partial: 'movie_list' %>
</div>

<%#インクリメンタルサーチjs%>
<script defer>
	$(function(){
		var
		preFunc = null,
		preInput = '',
		input = '',
		ajaxPost = function(input)
		{
		  $.ajax({
		    url: "ajax_movie_list",
		      type: "GET",
		      data: ("q=" + input)
		  });
		};
		$('#inc_search').on('input',function(){
		  input = $(this).val();   //前後の不要な空白を削除
		  if(preInput !== input){
		    clearTimeout(preFunc);
		    preFunc = setTimeout(ajaxPost(input), 800);
		  }
		  preInput = input;
		});
		$('#inc_search').keypress(function(e) {
			if ( e.which == 13 ) {
			// ここに処理を書く
			clearTimeout(preFunc);
		    preFunc = setTimeout(ajaxPost(input), 0);
			// スマホのキーボードを閉じる
			  $("#inc_search").blur();
			   return false;
			}
		})
	});
</script>