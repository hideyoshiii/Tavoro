<div class="main">
  <div class="block_side">
  </div>
  <div class="block_main">
    
    <div style="height:50px;"></div>
    <div class="base01">
      <span>
        <div class="layer10"></div>
        <div class="layer06">
          <div class="font_white_big">
            Sign in
          </div>
          <div class="gogo">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= f.email_field :email,placeholder: "email", required: "", autofocus: true %>
              <%= f.password_field :password,placeholder: "password", required: "" %>
              <div style="height:3vh;"></div>
                    <%= f.submit "完了",class:"btn_session" %>
            <% end %>
            <div style="height:10vh;"></div>
          </div>
        </div>
        <div class="layer04">
          <div class="pro17">
            <%= link_to new_user_registration_path do %>
              <div class="font_gray_min" style="margin:0px 0px 80px 20px;">
                アカウント作成
              </div>
            <% end %>
          </div>
          <div class="pro17" style="text-align:right;">
            <%= link_to new_user_password_path do %>
              <div class="font_gray_min" style="margin:0px 20px 80px 0px;">
                パスワードを忘れたら
              </div>
            <% end %>
          </div>
        </div>
      </span>
    </div>

  </div>
  <div class="block_side">
  </div>
</div>
