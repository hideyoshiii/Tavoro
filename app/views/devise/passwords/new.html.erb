<%#トップバー%>
<div class="bar_top">      
  <div class="inline_block_middle" style="width:20%;">
    <div style="text-align:left;padding-left:15px;">
      <a href="javascript:void(0);" onclick="window.history.back();">
        <%= image_tag "left_FAFAFA.svg", :style =>'width:18px;height:18px;' %>
      </a>                    
    </div>
  </div>
  <div class="inline_block_middle" style="width:60%;">
    <div class="line_limit01" style="text-align:center;">
      <div style="font-size:14px;color:#FAFAFA;">
        
      </div>
    </div>
  </div>
  <div class="inline_block_middle" style="width:20%;">
    <div style="text-align:right;padding-right:15px;">             
    </div>
  </div>
</div>
<div style="height:50px;"></div>

<div class="a1" style="height:calc(100% - 50px);">
  <div class="a8" style="text-align:center;">        
    <div style="font-size:20px;color:#FAFAFA;font-weight:bolder;">
      パスワードを忘れたら
    </div>
    <div style="height:5px;"></div>
    <div style="font-size:11px;color:rgba(250,250,250,1);">
      以下の欄に登録したメールアドレスをご入力ください
      <br>パスワード再設定について、メールでご連絡いたします
    </div>
    <div style="height:10px;"></div>
    <div class="form_sign">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.email_field :email,placeholder: "email", required: "", autofocus: true %>   
        <%= f.submit "送信",style:"width:30%;padding:0.7em 0em;color:rgba(250,250,250,1);background:rgba(5,98,123,0.5);border:solid 1px rgba(5,98,123,0.1);border-radius:2px;font-size:14px;letter-spacing:0.05em;display:inline-block;vertical-align:middle;text-align:center;box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);" %>
      <% end %>
    </div>  
    <div style="height:100px;"></div>
  <div>
</div>