<% if params[:q].blank? %>
	<% if @users.present? %>
		<div style="padding:8px 10px;background:rgba(200,200,200,0.1);font-size:10px;border-bottom:solid 0.5px rgba(100, 100, 100, 0.5);">
			公式アカウント  <%= @users_public_i %>
		</div>
	  	<% @users_public.each do |user| %>
	  		<% unless user == current_user %>
		  		<a href="" data-toggle="modal" data-target="#myModal_profile_<%= user.id %>">
		          <div class="box_tests05">
		            <div class="inline_block_middle" style="width:20%;padding-left:5px;">
			            <%= image_tag user.image(:medium), :class =>'img_user09' %>
		            </div>
		            <div class="inline_block_middle" style="width:60%;padding-left:5px;">
		              	<span class="font_white_max">
		                	<%= user.name %>
		                	<% if user.authority == "public" %>
		                      <%= image_tag "test55.png", :style =>'width:14px;height:14px;' %>
		                    <% end %>
		              	</span>
		            </div>
		            <div class="inline_block_middle" style="width:20%;text-align:right;padding-right:10px;">
		            	<%= image_tag "right_gray.png", :style =>'width:15px;height:15px;' %>
		            </div>
		          </div>
		        </a>      
	        <% end %>
	  	<% end %>
	  	<div style="padding:8px 10px;background:rgba(200,200,200,0.1);font-size:10px;border-bottom:solid 0.5px rgba(100, 100, 100, 0.5);">
			友達  <%= @users_normal_i %>
		</div>
	  	<% @users_normal.each do |user| %>
	  		<% unless user == current_user %>
		  		<a href="" data-toggle="modal" data-target="#myModal_profile_<%= user.id %>">
		          <div class="box_tests05">
		            <div class="inline_block_middle" style="width:20%;padding-left:5px;">
			            <%= image_tag user.image(:medium), :class =>'img_user09' %>
		            </div>
		            <div class="inline_block_middle" style="width:60%;padding-left:5px;">
		              	<span class="font_white_max">
		                	<%= user.name %>
		                	<% if user.authority == "public" %>
		                      <%= image_tag "test55.png", :style =>'width:14px;height:14px;' %>
		                    <% end %>
		              	</span>
		            </div>
		            <div class="inline_block_middle" style="width:20%;text-align:right;padding-right:10px;">
		            	<%= image_tag "right_gray.png", :style =>'width:15px;height:15px;' %>
		            </div>
		          </div>
		        </a>      
	        <% end %>
	  	<% end %>
	<% else %>
	 	<div class="font_gray" style="margin-top:30vh;text-align:center;">
			<%= image_tag "warning_gray.png", :style =>'width:20px;height:20px;' %> フォローしているユーザーがいません
		</div>
	<% end %>
<% else %>
	<% if @items.present? %>
	  	<% @items.each do |user| %>
	  		<% unless user == current_user %>
		  		<a href="" data-toggle="modal" data-target="#myModal_profile_<%= user.id %>">
		          <div class="box_tests05">
		            <div class="inline_block_middle" style="width:20%;padding-left:5px;">
			            <%= image_tag user.image(:medium), :class =>'img_user09' %>
		            </div>
		            <div class="inline_block_middle" style="width:60%;padding-left:5px;">
		              	<span class="font_white_max">
		                	<%= user.name %>
		                	<% if user.authority == "public" %>
		                      <%= image_tag "test55.png", :style =>'width:14px;height:14px;' %>
		                    <% end %>
		              	</span>
		            </div>
		            <div class="inline_block_middle" style="width:20%;text-align:right;padding-right:10px;">
		            	<%= image_tag "right_gray.png", :style =>'width:15px;height:15px;' %>
		            </div>
		          </div>
		        </a>	        
	        <% end %>
	  	<% end %>
	<% else %>
		<div class="font_gray" style="margin-top:30vh;text-align:center;">
			<%= image_tag "warning_gray.png", :style =>'width:20px;height:20px;' %> 結果がありません
		</div>
	<% end %>
<% end %>