<% if params[:q].blank? %>
	<% if @users.present? %>
		<div style="padding:8px 10px;background:rgba(200,200,200,0.1);font-size:10px;border-bottom:solid 0.5px rgba(100, 100, 100, 0.5);">
			公式アカウント  <%= @users_public_i %>
		</div>
	  	<% @users_public.each do |user| %>
	  		<% unless user == current_user %>
		  		<a href="" data-toggle="modal" data-target="#myModal_profile_<%= user.id %>">
		          <div class="box_tests05">
		            <div class="inline_block_middle" style="width:20%;padding-left:5px;">
			            <% if user.image.present? %>
			                <img data-src="<%= user.image(:medium) %>" class="img_user09 lazyload">
			            <% else %>
			                <img data-src="/assets/user.svg" class="img_user09 lazyload" style="box-shadow:none;">
			            <% end %>
		            </div>
		            <div class="inline_block_middle" style="width:60%;padding-left:5px;">
		              	<span class="font_white_max">
		                	<%= user.name %>
		                	<% if user.authority == "public" %>
		                      <img data-src="/assets/public.svg" class="lazyload" style="width:14px;height:14px;">
		                    <% end %>
		              	</span>
		            </div>
		            <div class="inline_block_middle" style="width:20%;text-align:right;padding-right:10px;">
		            	<img data-src="/assets/right_C2C2C2.svg" class="lazyload" style="width:15px;height:15px;">
		            </div>
		          </div>
		        </a>      
	        <% end %>
	  	<% end %>
	  	<div style="padding:8px 10px;background:rgba(200,200,200,0.1);font-size:10px;border-bottom:solid 0.5px rgba(100, 100, 100, 0.5);">
			友達  <%= @users_normal_i %>
		</div>
	  	<% @users_normal.each do |user| %>
	  		<% unless user == current_user %>
		  		<a href="" data-toggle="modal" data-target="#myModal_profile_<%= user.id %>">
		          <div class="box_tests05">
		            <div class="inline_block_middle" style="width:20%;padding-left:5px;">
			            <% if user.image.present? %>
			                <img data-src="<%= user.image(:medium) %>" class="img_user09 lazyload">
			            <% else %>
			                <img  data-src="/assets/user.svg" class="img_user09 lazyload" style="box-shadow:none;">
			            <% end %>
		            </div>
		            <div class="inline_block_middle" style="width:60%;padding-left:5px;">
		              	<span class="font_white_max">
		                	<%= user.name %>
		                	<% if user.authority == "public" %>
		                      <img data-src="/assets/public.svg" class="lazyload" style="width:14px;height:14px;">
		                    <% end %>
		              	</span>
		            </div>
		            <div class="inline_block_middle" style="width:20%;text-align:right;padding-right:10px;">
		            	<img data-src="/assets/right_C2C2C2.svg" class="lazyload" style="width:15px;height:15px;">
		            </div>
		          </div>
		        </a>      
	        <% end %>
	  	<% end %>
	<% else %>
	 	<div class="font_gray" style="margin-top:30vh;text-align:center;">
			<%= image_tag "warning_777777.svg", :style =>'width:20px;height:20px;' %> フォローしているユーザーがいません
		</div>
	<% end %>
<% else %>
	<% if @items.present? %>
	  	<% @items.each do |user| %>
