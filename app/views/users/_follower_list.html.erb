<% if params[:q].blank? %>
	<% if @users.present? %>
	  	<% @users.each do |user| %>
	  		<% unless user == current_user %>
		  		<a href="" data-toggle="modal" data-target="#myModal_profile_<%= user.id %>">
		          <div class="box_tests05">
		            <div class="inline_block_middle" style="width:20%;padding-left:5px;">
			            <%= image_tag user.image(:medium), :class =>'img_user09' %>
		            </div>
		            <div class="inline_block_middle" style="width:60%;padding-left:5px;">
		              	<span class="font_white_max">
		                	<%= user.name %>
		                	<% if user.authority == "public" %>		                		
		                		<img src="/assets/public.svg" style="width:14px;height:14px;">
		                	<% end %>
		              	</span>
		            </div>
		            <div class="inline_block_middle" style="width:20%;text-align:right;padding-right:10px;">
		            	<img src="/assets/right_C2C2C2.svg" style="width:15px;height:15px;">
		            </div>
		          </div>
		        </a>      
	        <% end %>
	  	<% end %>
	<% else %>
	 	<div class="font_gray" style="margin-top:30vh;text-align:center;">
			<img src="/assets/warning_777777.svg" style="width:20px;height:20px;"> フォローされているユーザーがいません
		</div>
	<% end %>
<% else %>
	<% if @items.present? %>
	  	<% @items.each do |user| %>
	  		<% unless user == current_user %>
		  		<a href="" data-toggle="modal" data-target="#myModal_profile_<%= user.id %>">
		          <div class="box_tests05">
		            <div class="inline_block_middle" style="width:20%;padding-left:5px;">
			            <%= image_tag user.image(:medium), :class =>'img_user09' %>
		            </div>
		            <div class="inline_block_middle" style="width:60%;padding-left:5px;">
		              	<span class="font_white_max">
		                	<%= user.name %>
		                	<% if user.authority == "public" %>
		                		<img src="/assets/public.svg" style="width:14px;height:14px;">
		                	<% end %>
		              	</span>
		            </div>
		            <div class="inline_block_middle" style="width:20%;text-align:right;padding-right:10px;">
		            	<img src="/assets/right_C2C2C2.svg" style="width:15px;height:15px;">
		            </div>
		          </div>
		        </a>	        
	        <% end %>
	  	<% end %>
	<% else %>
		<div class="font_gray" style="margin-top:30vh;text-align:center;">
			<img src="/assets/warning_777777.svg" style="width:20px;height:20px;"> 結果がありません
		</div>
	<% end %>
<% end %>