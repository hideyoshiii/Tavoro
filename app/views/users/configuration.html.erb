<%#アカウント削除モーダル%>
<div class="modal bottom fade" id="myModal_destroy_account">
  <div class="modal-dialog">
    <div class="a1">
      <div class="a14">
        <div class="d1">
          <div class="d2" style="background:rgba(15,15,15,1);"></div>
        </div>
      </div>
      <div class="a8" style="text-align:center;">     
        <div style="font-size:20px;font-weight:bold;">
          アカウントを削除しますか？
        </div>
        <div style="height:5px;"></div>
        <div style="font-size:12px;opacity:0.8;">
          アカウントを削除すると<br>これまでのデータが全て削除されます
        </div>
        <div style="height:35px;"></div>
        <%= link_to "/users", method: :delete, data: { confirm: '本当に削除してよろしいですか？' } do %>
          <div style="padding:0.5em 1.5em;color:rgba(250,250,250,0.9);background:rgba(251, 71, 71, 0.8);border:solid 1px rgba(5,98,123,0.1);border-radius:2.5px;font-size:16px;letter-spacing:0.05em;display:inline-block;vertical-align:middle;text-align:center;box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);font-weight:bolder;">
            アカウントを削除
          </div>
        <% end %>
        <div style="height:50px;"></div>
      </div>
      <div class="a13" style="text-align:center;">
        <a href="#" data-toggle="modal" data-dismiss="modal" id="dismiss_modal">
          <div class="btn_half_close">  
            <%= image_tag "ban_FAFAFA.svg", :style =>'width:20px;height:20px;margin-top:-2px;margin-right:5px;' %>キャンセル
          </div>
        </a>
      </div>
    </div>
  </div>
</div>
<%#モーダルtubolinks不具合修正%>
<script defer>
  $(function(){
    var display_post = $('#myModal_destroy_account').css('display');
    //モーダルが表示されているのに表示判定されてなかったら
    if(display_post === 'block'){
      //モーダルを表示状態にする
      $('body').removeClass('modal-open');
      $('.modal-backdrop').remove();
      $('#myModal_destroy_account').modal('toggle');
      //クリックでモーダルを閉じる 
      $('#dismiss_modal').on("click",function(){
        $('body').removeClass('modal-open');
        $('.modal-backdrop').remove();
        $('#myModal_destroy_account').modal('hide'); 
      });
    }       
  });
</script>