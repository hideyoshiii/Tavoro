<%#インクリメンタルサーチjs%>
<script defer>
	$(function(){
		var
		preFunc = null,
		preInput = '',
		input = '',
		ajaxPost = function(input)
		{
		  $.ajax({
		    url: "ajax_user_list",
		      type: "GET",
		      data: ("q=" + input)
		  });
		};
		$('#inc_search').keypress(function(e) {
			input = $(this).val();
			if ( e.which == 13 ) {
			// ここに処理を書く
			clearTimeout(preFunc);
		    preFunc = setTimeout(ajaxPost(input), 0);
			// スマホのキーボードを閉じる
			  $("#inc_search").blur();
			   return false;
			}
		})
	});
</script>