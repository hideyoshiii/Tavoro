<% if params[:q].blank? %>
	<% if @users.present? %>
	  	<% @users.each do |user| %>
	  		<% unless user == current_user %>
		  		<%= link_to "/#{user.username}/profile" do %>
		          <div class="box_tests05">
		            <div class="inline_block_middle" style="width:15%;padding-left:5px;">
			            <% if user.image.present? %>
			                <img data-src="<%= user.image(:medium) %>" class="img_user09 lazyload">
			            <% else %>
			                <img data-src="/assets/user.svg" class="img_user09 lazyload" style="box-shadow:none;">
			            <% end %>
		            </div>
		            <div class="inline_block_middle" style="width:65%;padding-left:5px;">
		              	<div class="font_white">
		                	<%= user.name %>
		                	<% if user.authority == "public" %>		                		
		                		<img data-src="/assets/public.svg" class="lazyload" style="width:14px;height:14px;">
		                	<% end %>
		              	</div>
		              	<div class="font_gray" style="margin-top:-2px;">
		                	<%= user.username %>
		              	</div>
		            </div>
		            <div class="inline_block_middle" style="width:20%;text-align:right;padding-right:10px;">
		            	<img data-src="/assets/right_C2C2C2.svg" class="lazyload" style="width:15px;height:15px;">
		            </div>
		          </div>
		        <% end %>
	        <% end %>
	  	<% end %>
	<% else %>
	 	<div class="font_gray" style="margin-top:25vh;text-align:center;">
			IDで友達を検索
		</div>
	<% end %>
<% else %>
	<% if @items.present? %>
	  	<% @items.each do |user| %>
	  		<% unless user == current_user %>
		  		<%= link_to "/#{user.username}/profile" do %>
		          <div class="box_tests05">
		            <div class="inline_block_middle" style="width:15%;padding-left:5px;">
			            <%= image_tag user.image(:medium), :class =>'img_user09' %>
		            </div>
		            <div class="inline_block_middle" style="width:65%;padding-left:5px;">
		              	<div class="font_white">
		                	<%= user.name %>
		                	<% if user.authority == "public" %>		                		
		                		<img data-src="/assets/public.svg" class="lazyload" style="width:14px;height:14px;">
		                	<% end %>
		              	</div>
		              	<div class="font_gray" style="margin-top:-2px;">
		                	<%= user.username %>
		              	</div>
		            </div>
		            <div class="inline_block_middle" style="width:20%;text-align:right;padding-right:10px;">
		            	<img data-src="/assets/right_C2C2C2.svg" class="lazyload" style="width:15px;height:15px;">
		            </div>
		          </div>
		        <% end %>    
	        <% end %>
	  	<% end %>
	<% else %>
		<div class="font_gray" style="margin-top:30vh;text-align:center;">
			<%= image_tag "warning_777777.svg", :style =>'width:20px;height:20px;' %> 結果がありません
		</div>
	<% end %>
<% end %>

<%#lazyload.js%>
<script defer>
  $(function() {
    $('img.lazyload').lazyload();
  });
</script>