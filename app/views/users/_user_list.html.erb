<% if params[:q].present? %>
	<% if @user.present? %>
		<div style="height:5vh;"></div>
		<div style="width:100%;">       
          	<div style="width:100%;">
              	<div style="text-align:center;">
                  	<%= image_tag @user.image(:large), :class => "img_user08" %>
              	</div>
	              <div style="font-size:18px;text-align:center;margin-top:10px;">
	                <%= @user.name %>
	                <% if @user.authority == "public" %>
                      <%= image_tag "test55.png", :style =>'width:14px;height:14px;' %>
                    <% end %>
	              </div>
            </div>          
        </div>     
      	<% if @user.description.present? %>
	        <div style="height:0.5vh;"></div>
	        <div class="font_gray_min" style="width:100%;padding:0 20px;color:#C2C2C2;text-align:center;">
	        	<%= simple_format(@user.description, {}, wrapper_tag: "div") %>
	        </div>
      	<% end %>                   	            
          <div style="height:3vh;"></div>
        	<div style="text-align:center;">
	        	<div id="relationship-of-<%= @user.id %>">
			      	<%= render partial: 'relationships/relationship' %>
			    </div>
	        </div>       
          	<div style="height:7vh;"></div>
          	<div style="text-align:center;width:100%;">
	            <div class="pro20">
	          	  <div>
	                <%= image_tag "checked.png", :style =>'width:18px;height:18px;' %>
	              </div> 
	              <div style="font-size:12px;color:#C2C2C2;margin-top:5px;">
	                <%= Post.where(user_id: @user.id).where.not(review: "bookmark").size %> checkeds
	              </div> 
	            </div>
	            <div class="pro20">
	              <div>
	                <%= image_tag "bookmark.png", :style =>'width:18px;height:18px;' %>
	              </div> 
	              <div style="font-size:12px;color:#C2C2C2;margin-top:5px;">
	                <%= Post.where(user_id: @user.id, review: "bookmark").size %> bookmarks
	              </div> 
	            </div>
	            <div class="pro20">
	              <div>
	                <%= image_tag "test51.png", :style =>'width:18px;height:18px;' %>
	              </div> 
	              <div style="font-size:12px;color:#C2C2C2;margin-top:5px;">
	                coming soon
	              </div> 
            	</div>
        	</div>  
		<% else %>
		<div style="font-size:15px;color:#777777;margin-top:10vh;text-align:center;">
			<%= image_tag "test28.png", :style =>'width:15px;height:15px;' %> 入力したIDのユーザーは存在しません
		</div>
	<% end %>
<% else %>
	<div style="height:16vh;"></div>
	<div style="text-align:center;margin-top:20px;">
		<%= image_tag "users.png", :style =>'width:35px;height:35px;' %>
	</div>
	<div style="text-align:center;margin-top:10px;font-size:12px;color:#999999;">
		フォローは20人まで追加できます
		<br>
		公式アカウントは無制限です
	</div>	
	<div style="height:5vh;"></div>	
	<div style="text-align:center;">
		<%= link_to invitation_path do %>	
			<span class="btn_invite">
				<%= image_tag "letter.png", :style =>'width:15px;height:15px;margin-top:-2px;' %> 友達を招待
			</span>
		<% end %>
	</div>	
    <div style="height:10vh;"></div> 
<% end %>