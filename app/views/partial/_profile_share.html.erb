<div class="modal bottom fade" id="myModal_profile_share">
	<div class="modal-dialog">
		<div class="a1">
          	<div class="a4">
            	<div class="d1">
              		<div class="d2"></div>
            	</div>
          	</div>
          	<div class="a6" style="text-align:center;">
          		<div style="position:relative;width:0;height:0;z-index:1;"></div>
          		<div style="width:100%;height:100%;overflow-y:scroll;-webkit-overflow-scrolling:touch;"> 
	          		<div style="height:8%;"></div>
	          		<div style="width:40%;display:inline-block;">
	          			<% if @user.image.present? %>     
				          <img data-src="<%= @user.image(:large) %>" class="lazyload_profile_share" style="width:90px;height:90px;padding:0;margin:0;border-radius:50%;object-fit:cover;background:rgba(0,0,0,0.1);">
				        <% else %>
				          <img data-src="/assets/user.svg" class="lazyload_profile_share" style="width:90px;height:90px;padding:0;margin:0;border-radius:50%;object-fit:cover;background:rgba(0,0,0,0.1);">
				        <% end %>
	          		</div>
	          		<div style="height:2%;"></div>
	          		<div class="font_white_big" style="width:90%;display:inline-block;font-weight:bold;">
	          			<%= @user.name %>
				        <% if @user.authority == "public" %>
				        	<img data-src="/assets/public.svg" class="lazyload_profile_share" style="width:14px;height:14px;">
				        <% end %>
	          		</div>
	          		<div style="height:7%;"></div>
	          		<div style="width:100%;padding:0 10%;">
	          			<%= link_to "/" do %>
							<div class="btn_half_item">  
								<img data-src="/assets/twitter.svg" class="lazyload_profile_share" style="width:22px;height:22px;margin-right:15px;">twitterでシェア
							</div>
						<% end %>
						<div style="height:30px"></div>
	          			<%= link_to "/" do %>
							<div class="btn_half_item">  
								<img data-src="/assets/line.svg" class="lazyload_profile_share" style="width:22px;height:22px;margin-right:15px;">LINEでシェア
							</div>
						<% end %>	
						<div style="height:30px"></div>
	          			<%= link_to "/" do %>
							<div class="btn_half_item">  
								<img data-src="/assets/link_FAFAFA.svg" class="lazyload_profile_share" style="width:22px;height:22px;margin-right:15px;">リンクをコピー
							</div>
						<% end %>			
						<div style="height:90px"></div>	
					</div>
				</div>
          	</div>
          	<div class="a13" style="text-align:center;">
          		<a data-toggle="modal" data-dismiss="modal">
					<div class="btn_half_close">  
						<img data-src="/assets/ban_FAFAFA.svg" class="lazyload_profile_share" style="width:20px;height:20px;margin-top:-4px;margin-right:5px;">キャンセル  
					</div>
			  	</a>
          	</div>
        </div>
	</div>
</div>

<%#モーダルlazyload%>
<script defer>
	$('#myModal_profile_share').on("show.bs.modal", function () {
    	$('img.lazyload_profile_share').lazyload();
    });      
</script>
<%#モーダルtubolinks不具合修正%>
<script defer>
	$(function(){
		var display = $('#myModal_profile_share').css('display');
		//モーダルが表示されているのに表示判定されてなかったら
		if(display === 'block'){
			//モーダルを表示状態にする
			$('body').removeClass('modal-open');
				$('.modal-backdrop').remove();				
			$('#myModal_profile_share').modal('toggle');
			//クリックでモーダルを閉じる 
			$('#myModal_profile_share').on("click",function(){
				$('body').removeClass('modal-open');
			  	$('.modal-backdrop').remove();
				$('#myModal_profile_share').modal('hide'); 
			});
		}				
	});
</script>