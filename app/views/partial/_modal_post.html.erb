<%#投稿ボタン%>
<div style="position:fixed;bottom:3%;left:0%;width:100%;z-index:99;">
	<div style="width:auto;display:inline-block;width:100%;text-align:center;">
		<span data-toggle="modal" data-target="#myModal_post" style="position:relative;display:inline-block;vertical-align:middle;width:55px;height:55px;line-height:55px;background:rgba(0,60,85,1);text-align:center;border-radius:50%;">
			<i>
				<%= image_tag "plus_FAFAFA.svg", :style =>'width:22px;height:22px;' %>
			</i>
		</span>
	</div>
</div>

<%#投稿モーダル%>
<div class="modal bottom fade" id="myModal_post">
    <div class="modal-dialog">
      <div class="a1">
        <div class="a14">
          <div class="d1">
            <div class="d2" style="background:rgba(12,12,12,1);"></div>
          </div>
        </div>
        <div class="a8" style="text-align:center;">   	
	  		<div style="font-size:28px;font-weight:bold;">
				Create Post
			</div>
			<div style="font-size:12px;opacity:0.8;">
				投稿を作成
			</div>
	        <div style="height:30px;"></div>
	        <div style="padding:0 6%;">
	      		<div class="inline_block_top" style="width:33.33%;text-align:center;">
	      			<%= link_to(works_movie_path) do %>
				      	<div style="position:relative;display:inline-block;vertical-align:middle;width:68px;height:68px;line-height:68px;border-radius:50%;color:rgba(250,250,250,0.9);background:rgba(40,40,40,0.5);border:solid 1px rgba(40,40,40,0.1);">
					      	<i>
					        	<%= image_tag "movie_FAFAFA.svg", :style =>'width:24px;height:24px;' %>
					        </i>
				        </div>	
				        <div style="height:15px;"></div>
				        <div style="font-size:11px;color:#FAFAFA;">
					        映画/テレビ
					    </div>	
				    <% end %>	
			    </div>
	        	<div class="inline_block_top" style="width:33.33%;text-align:center;">        		
	        		<%= link_to(works_book_path) do %>
				      	<div style="position:relative;display:inline-block;vertical-align:middle;width:68px;height:68px;line-height:68px;border-radius:50%;color:rgba(250,250,250,0.9);background:rgba(40,40,40,0.5);border:solid 1px rgba(40,40,40,0.1);">
					      	<i>
					        	<%= image_tag "book_FAFAFA.svg", :style =>'width:24px;height:24px;' %>
					        </i>
				        </div>	
				        <div style="height:15px;"></div>
				        <div style="font-size:11px;color:#FAFAFA;">
					        ブック/コミック
					    </div>	
				    <% end %>
			    </div>
	        	<div class="inline_block_top" style="width:33.33%;text-align:center;">
	        		<%= link_to(works_music_path) do %>
				      	<div style="position:relative;display:inline-block;vertical-align:middle;width:68px;height:68px;line-height:68px;border-radius:50%;color:rgba(250,250,250,0.9);background:rgba(40,40,40,0.5);border:solid 1px rgba(40,40,40,0.1);">
					      	<i>
					        	<%= image_tag "music_FAFAFA.svg", :style =>'width:24px;height:24px;' %>
					        </i>
				        </div>	
				        <div style="height:15px;"></div>
				        <div style="font-size:11px;color:#FAFAFA;">
					        ミュージック
					    </div>
				    <% end %>	
			    </div>
		    </div>
	        <div style="height:100px;"></div>
        </div>
        <div style="position:fixed;bottom:3%;left:0%;width:100%;z-index:99;">
        	<div style="width:100%;display:inline-block;text-align:center;">				
				<span data-dismiss="modal" id="dismiss_post" style="position:relative;display:inline-block;vertical-align:middle;width:55px;height:55px;line-height:55px;background:rgba(0,60,85,1);text-align:center;border-radius:50%;">
					<i>
						<%= image_tag "plus_FAFAFA.svg", :style =>'width:22px;height:22px;transform-origin:50%,50%;transform:rotate(45deg);' %>
					</i>
				</span>				
			</div>
		</div>
      </div>
    </div>
  </div>
</div>
<%#モーダルtubolinks不具合修正%>
<script defer>
  $(function(){
    var display_post = $('#myModal_post').css('display');
    //モーダルが表示されているのに表示判定されてなかったら
    if(display_post === 'block'){
      //モーダルを表示状態にする
      $('body').removeClass('modal-open');
      $('.modal-backdrop').remove();
      $('#myModal_post').modal('toggle');
      //クリックでモーダルを閉じる 
      $('#dismiss_post').on("click",function(){
        $('body').removeClass('modal-open');
        $('.modal-backdrop').remove();
        $('#myModal_post').modal('hide'); 
      });
    }       
  });
</script>