        	<div style="width:100%;display:inline-block;text-align:center;">				
				<span data-dismiss="modal" id="dismiss_post" style="position:relative;display:inline-block;vertical-align:middle;width:60px;height:60px;line-height:60px;background:rgba(0,60,85,1);text-align:center;border-radius:50%;box-shadow:0px 0px 15px rgba(0,0,0,0.3);">
					<i>
						<%= image_tag "plus_FAFAFA.svg", :style =>'width:22px;height:22px;transform-origin:50%,50%;transform:rotate(45deg);' %>
