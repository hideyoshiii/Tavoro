<div class="modal bottom fade" id="myModal_half_<%= post.id %>">
	<div class="modal-dialog">
		<div class="a1">
          	<div class="a4">
            	<div class="d1">
              		<div class="d2"></div>
            	</div>
          	</div>
          	<div class="a6" style="text-align:center;">
          		<div style="position:relative;width:0;height:0;z-index:1;"></div>
          		<div style="width:100%;height:100%;overflow-y:scroll;-webkit-overflow-scrolling:touch;"> 
	          		<div style="height:8%;"></div>
	          		<div style="width:40%;display:inline-block;">
	          			<% if post.image_url.blank? %>
							<img data-src="/assets/nothing01.jpg" class="lazyload_half_modal_<%= post.id %>" style="width:100%;height:auto;">
						<% else %>	
							<% if post.category == "movie" || post.category == "tv" %>
								<% @poster_show = post.image_url.sub(/original/, 'w500') %>
							<% end %>
							<% if post.category == "book" || post.category == "comic" %>
								<% if post.api == "itunes" %>
									<% @poster_show = post.image_url.sub(/1000x1000bb/, '500x500bb') %>
								<% else %>
									<% @poster_show = post.image_url.sub(/jpg/, 'jpg?_ex=500x500') %>
								<% end %>
							<% end %>
							<% if post.category == "music" %>
								<% @poster_show = post.image_url.sub(/1000x1000bb/, '500x500bb') %>
							<% end %>
							<img data-src="<%= @poster_show %>" class="lazyload_half_modal_<%= post.id %>" style="width:100%;height:auto;">
						<% end %>
	          		</div>
	          		<div style="height:2%;"></div>
	          		<div class="font_white_big" style="width:90%;display:inline-block;font-weight:bold;">
	          			<%= post.title %>
	          		</div>
	          		<div style="height:7%;"></div>
	          		<div style="width:100%;padding:0 10%;">
	          			<%= link_to "/likes/post/#{post.id}" do %>
							<div class="btn_half_item">  
								<img data-src="/assets/like_FAFAFA.svg" class="lazyload_half_modal_<%= post.id %>" style="width:20px;height:20px;margin:-4px 15px 0 0;opacity:0.6;">いいね！一覧
							</div>
						<% end %>
						<div style="height:30px"></div>
	          			<% if user_signed_in? %>
	          				<%#投稿者でなかったら%>
			          		<% unless post.user.id == current_user.id %>		          			
								<span id="bookmark-of-<%= post.id %>">
							      	<%= render partial: 'works/bookmark', locals: { post: post } %>
							    </span>
							    <div style="height:30px"></div>
								<%= link_to "/works/#{post.id}/copy" do %>
									<div class="btn_half_item">  
										<img data-src="/assets/add_FAFAFA.svg" class="lazyload_half_modal_<%= post.id %>" style="width:20px;height:20px;margin:-2px 13px 2px 0;opacity:0.6;">この作品を投稿
									</div>	
								<% end %>									
							<% end %>
							<%#投稿者でだったら%>
							<% if post.user.id == current_user.id %>
								<% unless post.review == "bookmark" %>					
									<span id="favorite-of-<%= post.id %>">
								      	<%= render partial: 'lists/favorite', locals: { post: post } %>
								    </span>	
								    <div style="height:30px"></div>
									<span id="profile-of-<%= post.id %>">
								      	<%= render partial: 'lists/profile', locals: { post: post } %>
								    </span>						    	
							   	<% end %>						    
								<div style="height:30px"></div>
								<%= link_to "/works/#{post.id}/edit" do %>
									<div class="btn_half_item">  
										<img data-src="/assets/edit_FAFAFA.svg" class="lazyload_half_modal_<%= post.id %>" style="width:20px;height:20px;margin:-4px 15px 0 0;opacity:0.6;">投稿を編集
									</div>
								<% end %>
								<div style="height:30px"></div>			
								<%= link_to "/works/#{post.id}/destroy", method: :post, data: { confirm: '削除しますか？' } do %>
									<div class="btn_half_item" style="color:#FB473E;">  
										<img data-src="/assets/trash_FB473E.svg" class="lazyload_half_modal_<%= post.id %>" style="width:20px;height:20px;margin:-4px 15px 0 0;opacity:0.7;">投稿を削除
									</div>
								<% end %>
								<div style="height:30px"></div>	
							<% end %>
						<%#ログインしてなかったら%>
						<% else %>							
							<%= link_to "/likes/#{post.id}/create", method: :post do %>
								<div class="btn_half_item">  
									<%= image_tag "like_FAFAFA.svg", :style =>'vertical-align:middle;width:20px;height:20px;margin:-5px 15px 0 0;opacity:0.7;' %>いいね！
								</div>
							<% end %>
							<div style="height:30px"></div>
							<%= link_to "/works/#{post.id}/create_bookmark", method: :post do %>
								<div class="btn_half_item">  
									<%= image_tag "bookmark_FAFAFA.svg", :style =>'vertical-align:middle;width:22px;height:22px;margin:-5px 14px 0px -1px;opacity:0.7;' %>ブックマーク
								</div>
							<% end %>
							<div style="height:30px"></div>
							<%= link_to "/works/#{post.id}/copy" do %>
								<div class="btn_half_item">  
									<img data-src="/assets/add_FAFAFA.svg" class="lazyload_half_modal_<%= post.id %>" style="width:20px;height:20px;margin:-2px 13px 2px 0;opacity:0.6;">この作品を投稿
								</div>	
							<% end %>	
						<% end %>
						<div style="height:90px"></div>	
					</div>
				</div>
          	</div>
          	<div class="a13" style="text-align:center;">
          		<a data-toggle="modal" data-dismiss="modal">
					<div class="btn_half_close">  
						<img data-src="/assets/ban_FAFAFA.svg" class="lazyload_half_modal_<%= post.id %>" style="width:20px;height:20px;margin-top:-4px;margin-right:5px;">キャンセル  
					</div>
			  	</a>
          	</div>
        </div>
	</div>
</div>

<%#モーダルlazyload%>
<script defer>
	$('#myModal_half_<%= post.id %>').on("show.bs.modal", function () {
    	$('img.lazyload_half_modal_<%= post.id %>').lazyload();
    });      
</script>
<%#モーダルtubolinks不具合修正%>
<script defer>
	$(function(){
		var display_<%= post.id %> = $('#myModal_half_<%= post.id %>').css('display');
		//モーダルが表示されているのに表示判定されてなかったら
		if(display_<%= post.id %> === 'block'){
			//モーダルを表示状態にする
			$('body').removeClass('modal-open');
				$('.modal-backdrop').remove();				
			$('#myModal_half_<%= post.id %>').modal('toggle');
			//クリックでモーダルを閉じる 
			$('#myModal_half_<%= post.id %>').on("click",function(){
				$('body').removeClass('modal-open');
			  	$('.modal-backdrop').remove();
				$('#myModal_<%= post.id %>').modal('hide'); 
			});
		}				
	});
</script>