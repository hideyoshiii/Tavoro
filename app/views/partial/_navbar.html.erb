<div class="bar_top">
  <div style="display:inline-block;width:50%;height:50px;">
    <div style="float:left;">
      <%= link_to root_path do %>
      <div style="padding:10px 5px 0px 10px;color:rgba(39,134,160,0.8);font-size:20px;">
        TAVORE <%= image_tag "beta.svg", :style =>'width:15px;height:15px;margin:2px 0px 0px -6px;opacity:0.8;' %>
      </div>
      <% end %>
    </div>
  </div>
  <div style="display:inline-block;width:50%;height:50px;">
    <% if user_signed_in? %>
      <div style="float:right;padding:10px 10px 0px 0px;">
        <%= link_to "/#{current_user.username}" do %>
          <%= image_tag "user.svg", :style =>'width:26px;height:26px;' %>
        <% end %>
      </div>
      <% if request.fullpath == "/users/notifications" %>
        <div style="float:right;padding:12px 10px 0px 0px;">
          <%= link_to "/users/notifications" do %>
            <%= image_tag "bell_777777.svg", :style =>'width:22px;height:22px;' %>
          <% end %>
        </div>
      <% else %>
        <% if Notification.where(user_id: current_user.id,read: false).size >= 1 %>
          <div style="float:right;padding:12px 10px 0px 0px;">
            <%= link_to "/users/notifications" do %>
              <%= image_tag "bell_FB473E.svg", :style =>'width:22px;height:22px;' %>
            <% end %>
          </div>
        <% else %>
          <div style="float:right;padding:12px 10px 0px 0px;">
            <%= link_to "/users/notifications" do %>
              <%= image_tag "bell_777777.svg", :style =>'width:22px;height:22px;' %>
            <% end %>
          </div>
        <% end %>
      <% end %>
      <div style="float:right;padding:12px 10px 0px 0px;">
        <%= link_to "/users/user" do %>
          <%= image_tag "search_777777.svg", :style =>'width:22px;height:22px;' %>
        <% end %>
      </div>
    <% else %>
      <div style="float:right;padding:18px 10px 0px 0px;font-size:11px;">
        <a href="" data-toggle="modal" data-target="#myModal_what" style="color:rgba(5,98,123,1);">
          What's TAVORE
        </a>
      </div>
    <% end %>
  </div>
</div>


