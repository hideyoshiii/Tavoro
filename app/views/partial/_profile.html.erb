<div class="modal top fade" id="myModal_profile_<%= @user.id %>">
  <div class="height_modal"></div>
    <div class="modal-dialog">
      <div class="a1">
        <div class="a4">
          <div class="d1">
            <div class="d7"></div>
            <% if @list = List.find_by(user_id: @user.id, title: "プロフィール") %>
              <% if @list_item = ListItem.find_by(list_id: @list.id) %>
                <img data-src="<%= @list_item.post.image_url %>" class="img_myboom lazyload_modal_profile_<%= @user.id %>">
              <% else %>
                <%#myboomのデフォルト画像%>
              <% end %>
            <% else %>
              <%#myboomのデフォルト画像%>
            <% end %>
          </div>
        </div>
        <div class="a11">
          <div class="font_white" style="margin:10px;width:35%;display:inline-block;opacity:0.5;">
            <div class="contain_title02">
              <% if @list_item.present? %>
                <div>
                  <% if @list_item.post.category == "movie" %>
                    <%= image_tag "movie_white.png", :class =>'icon_category' %> <%= @list_item.post.title %>
                  <% end %>
                  <% if @list_item.post.category == "tv" %>
                    <%= image_tag "movie_white.png", :class =>'icon_category' %> <%= @list_item.post.title %>
                  <% end %>
                  <% if @list_item.post.category == "book" %>
                    <%= image_tag "book_white.png", :class =>'icon_category' %> <%= @list_item.post.title %>
                  <% end %>
                  <% if @list_item.post.category == "comic" %>
                    <%= image_tag "book_white.png", :class =>'icon_category' %> <%= @list_item.post.title %>
                  <% end %>
                  <% if @list_item.post.category == "music" %>
                    <%= image_tag "music_white.png", :class =>'icon_category' %> <%= @list_item.post.title %>
                  <% end %>
                </div>
              <% else %>
                <div>
                  <%#myboomが設定されていません%>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="a8">     
          <div style="width:100%;"> 
            <% if current_user?(@user) %>
             <div class="inline_block_bottom" style="width:27.5%;">
                <%= link_to "/users/following" do %>              
                  <div style="font-size:11px;color:#C2C2C2;border-bottom: solid 1px rgba(5,98,123,0.8);margin-bottom:1vh;">
                      <%= current_user.followings.size %> followings
                  </div> 
                <% end %>
              </div> 
            <% end %>      
          	<div class="inline_block_bottom" style="width:45%;">
              <div style="text-align:center;">
                <% if user.image.present? %>
                  <img data-src="<%= user.image(:large) %>" class="img_user08 lazyload_modal_profile_<%= @user.id %>">
                <% else %>
                  <img  data-src="/assets/user09.png" class="img_user08 lazyload_modal_profile_<%= @user.id %>">
                <% end %>
              </div>
              <div style="font-size:18px;text-align:center;margin-top:10px;">
                <%= user.name %>
                <% if user.authority == "public" %>
                  <%= image_tag "test55.png", :style =>'width:14px;height:14px;' %>
                <% end %>
              </div>
            </div>  
            <% if current_user?(@user) %>
              <div class="inline_block_bottom" style="width:27.5%;">
                <%= link_to "/users/follower" do %>   
                  <div style="font-size:11px;color:#C2C2C2;border-bottom: solid 1px rgba(5,98,123,0.8);margin-bottom:1vh;">
                      <%= current_user.followers.size %> followers
                  </div> 
                <% end %>
              </div>  
            <% end %>         
          </div>     
          <% if @user.description.present? %>
            <div style="height:0.5vh;"></div>
            <div class="font_gray_min" style="width:50%;color:#C2C2C2;display:inline-block;">
              <%= simple_format(@user.description, {}, wrapper_tag: "div") %>
            </div>
          <% else %> 
            <% if current_user?(@user) %>
              <div style="height:1vh;"></div>
              <%= link_to edit_user_registration_path do %>
                <div class="font_gray_min" style="width:50%;color:#2FB4B4;display:inline-block;">
                  自己紹介を書く
                </div>
              <% end %>
            <% end %> 
          <% end %>                	            
          <div style="height:4vh;"></div>
        	<div style="text-align:center;">
          	<div id="relationship-of-<%= @user.id %>">
		      	  <%= render partial: 'relationships/relationship' %>
		        </div>
	        </div>       
          <div style="height:7vh;"></div>
          <div style="text-align:center;width:95%;display:inline-block;">
            <div class="inline_block_middle" style="width:33.33%;">
              <%= link_to "/#{@user.username}/posts" do %>
            	  <div>
                  <%= image_tag "checked_white.png", :style =>'width:16px;height:16px;' %>
                </div> 
                <div style="font-size:12px;color:#C2C2C2;margin-top:5px;">
                  <%= @checkeds_i %> checkeds
                </div>
              <% end %>
            </div>
            <div class="inline_block_middle" style="width:33.33%;">
              <%= link_to "/#{@user.username}/bookmarks" do %>
                <div>
                  <%= image_tag "bookmark_white.png", :style =>'width:16px;height:16px;' %>
                </div> 
                <div style="font-size:12px;color:#C2C2C2;margin-top:5px;">
                  <%= @bookmarks_i %> bookmarks
                </div>
              <% end %>
            </div>
            <div class="inline_block_middle" style="width:33.33%;opacity:0.5;">
              <div>
                <%= image_tag "file_white.png", :style =>'width:16px;height:16px;' %>
              </div> 
              <div style="font-size:12px;color:#C2C2C2;margin-top:5px;">
                coming soon
              </div> 
            </div>
          </div>  
	        <div style="height:10vh;"></div>
        </div>
        <div class="a10">
          <div class="inline_block_middle" style="width:100%;"> 
            <a data-dismiss="modal" id="dismiss_dashbord">
              <%= image_tag "close_blue.png", :class =>'img_left02' %>
            </a>
          </div>
        </div>
    </div>
  </div>
</div>

<%#lazyload.js%>
<script defer>
  $('#myModal_profile_<%= @user.id %>').on("show.bs.modal", function () {
      $('img.lazyload_modal_profile_<%= @user.id %>').lazyload();
    });      
</script>
<%#モーダルtubolinks不具合修正%>
<script defer>
  $(function(){
    var display_profile_<%= @user.id %> = $('#myModal_profile_<%= @user.id %>').css('display');
    //モーダルが表示されているのに表示判定されてなかったら
    if(display_profile_<%= @user.id %> === 'block'){
      //モーダルを表示状態にする        
      $('body').removeClass('modal-open');
      $('.modal-backdrop').remove();
      $('#myModal_profile_<%= @user.id %>').modal('toggle');
      //クリックでモーダルを閉じる 
      $('#dismiss_profile_<%= @user.id %>').on("click",function(){
        $('body').removeClass('modal-open');
          $('.modal-backdrop').remove();
        $('#myModal_profile_<%= @user.id %>').modal('hide'); 
      });
    }       
  });
</script>