		<% @users.each.with_index(1) do |user, i| %>
			<div class="inline_block_middle" style="width:95%;">
				<%= link_to "/#{user.username}" do %>
					<div class="inline_block_middle" style="width:60%;padding-right:10px;">
				      <div class="inline_block_middle" style="width:55px;">
				          <% if user.image.present? %>
				              <img data-src="<%= user.image(:medium) %>" class="lazyload" style="width:45px;height:45px;border-radius:50%;object-fit:cover;background:rgba(0,0,0,0.1);box-shadow:1px 1px 5px 2px rgba(0,0,0,0.2);">
				          <% else %>
				              <img data-src="/assets/user.svg" class="lazyload" style="width:45px;height:45px;border-radius:50%;object-fit:cover;background:rgba(0,0,0,0.1);">
				          <% end %>
