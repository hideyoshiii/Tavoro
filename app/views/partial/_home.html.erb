<%#ファーストビュー%>
<div class="a1" style="height:calc(100% - 0px);">
    <div class="a8" style="text-align:center;">
      	<%= image_tag "tavore_logo_01.png", :style =>'width:110px;height:110px;' %>
      	<div style="font-size:20px;margin-top:-5px;letter-spacing:0.05em;">
        	TAVORE
      	</div>
      	<div style="height:5px;"></div>
      	<div style="font-size:12px;opacity:0.8;letter-spacing:0.02em;">
      		log of movie, book, music
      	</div>
      	<div style="height:30px;"></div>
      	<div style="width:80%;display:inline-block;">
			<div class="inline_block_middle" style="text-align:center;width:48%;">
				<%= link_to new_user_session_path do %>
			    	<div style="width:100%;padding:0.7em 0em;color:rgba(250,250,250,1);background:rgba(40,40,40,0.5);border:solid 1px rgba(40,40,40,0.1);border-radius:2px;font-size:14px;letter-spacing:0.05em;display:inline-block;vertical-align:middle;text-align:center;box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);">
						ログイン
					</div>
			    <% end %>
		    </div>
		    <div class="inline_block_middle" style="text-align:center;width:4%;">
		    </div>
		    <div class="inline_block_middle" style="text-align:center;width:48%;">
		    	<%= link_to new_user_registration_path do %>
			    	<div style="width:100%;padding:0.7em 0em;color:rgba(250,250,250,1);background:rgba(5,98,123,0.5);border:solid 1px rgba(5,98,123,0.1);border-radius:2px;font-size:14px;letter-spacing:0.05em;display:inline-block;vertical-align:middle;text-align:center;box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);">
						アカウント作成
					</div>
			    <% end %>
		    </div>					   
		</div>
		<div style="height:80px;"></div>
    </div>
</div>