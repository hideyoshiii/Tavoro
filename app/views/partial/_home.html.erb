				      <div class="inline_block_middle" style="width:calc(100% - 55px);">
				      	<div class="contain_title02">
				            	<div class="font_white" style="margin-top:4px;">
				              	<%= user.name %>
				              	<% if user.authority == "public" %>		                		
				              		<img data-src="/assets/public.svg" class="icon_public_min lazyload">
				              	<% end %>
				            	</div>
				        	</div>
				        	<div class="contain_title02">
				            	<div class="font_gray_min" style="margin-top:-2px;">
				              	<%= user.username %>
				            	</div>
				          </div>
				      </div>
				    </div>
				    <div class="inline_block_middle" style="width:40%;text-align:right;padding-right:25px;">
				    	<div style="display: inline-block;padding: 4px 15px;background:none;color:rgba(250,250,250,0.8);font-size:12px;border:solid 1px rgba(250,250,250,0.55);">
