<%= link_to "/#{user.username}" do %>
  <div style="margin:0 10px;padding:14px 5px;border-bottom:solid 0.5px rgba(150, 150, 150, 0.2);">
  	<div class="inline_block_middle" style="width:80%;padding:0 5px;">
      <div class="inline_block_middle" style="width:55px;">
          <% if user.image.present? %>
              <img data-src="<%= user.image(:medium) %>" class="lazyload" style="width:45px;height:45px;border-radius:50%;object-fit:cover;background:rgba(0,0,0,0.1);box-shadow:1px 1px 5px 2px rgba(0,0,0,0.2);">
          <% else %>
              <img data-src="/assets/user.jpg" class="lazyload" style="width:45px;height:45px;border-radius:50%;object-fit:cover;background:rgba(0,0,0,0.1);box-shadow:1px 1px 5px 2px rgba(0,0,0,0.2);">
          <% end %>
      </div>
      <div class="inline_block_middle" style="width:calc(100% - 55px);">
      	<div class="line_limit01">
            	<div style="font-size:12px;color:#FAFAFA;font-weight:bolder;margin-top:2px;">
              	<%= user.name %>
              	<% if user.authority == "public" %>		                		
              		<img src="/assets/public.svg" class="icon_public_min">
              	<% end %>
            	</div>
        	</div>
        	<div class="line_limit01">
            	<div style="font-size:10px;color:#FAFAFA;opacity:0.8;">
              	@<%= user.username %>
            	</div>
          </div>
      </div>
    </div>
    <div class="inline_block_middle" style="width:20%;text-align:right;padding-right:10px;">
      <img data-src="/assets/right_FAFAFA.svg" class="lazyload" style="width:15px;height:15px;opacity:0.8;">
    </div>
  </div>
<% end %>