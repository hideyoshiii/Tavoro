<div class="modal bottom fade" id="myModal_half_profile">
	<div class="modal-dialog">
		<div class="a1">
          	<div class="a4">
            	<div class="d1">
              		<div class="d2"></div>
            	</div>
          	</div>
          	<div class="a6" style="text-align:center;">
          		<div style="position:relative;width:0;height:0;z-index:1;"></div>
          		<div style="width:100%;height:100%;overflow-y:scroll;-webkit-overflow-scrolling:touch;">
	          		<div style="min-height:101%;">  
		          		<div style="height:7vh;"></div>
		          		<div style="width:40%;display:inline-block;">
		          			<% if @user.image.present? %>     
					          <img data-src="<%= @user.image(:large) %>" class="lazyload_Modal_half_profile" style="width:90px;height:90px;padding:0;margin:0;border-radius:50%;object-fit:cover;background:rgba(0,0,0,0.1);">
					        <% else %>
					          <img data-src="/assets/user.jpg" class="lazyload_Modal_half_profile" style="width:90px;height:90px;padding:0;margin:0;border-radius:50%;object-fit:cover;background:rgba(0,0,0,0.1);">
					        <% end %>
		          		</div>
		          		<div style="height:2vh;"></div>
		          		<div class="font_white_big" style="width:90%;display:inline-block;font-weight:bold;">
		          			<%= @user.name %>
					        <% if @user.authority == "public" %>
					        	<%= image_tag "public.svg", :class =>'icon_public' %>
					        <% end %>
		          		</div>
		          		<div style="height:7vh;"></div>
		          		<div style="width:100%;padding:0 10%;">
		          			<%= link_to "/users/configuration" do %>
								<div class="btn_half_item">  
									<%= image_tag "setting_FAFAFA.svg", :style =>'width:18px;height:18px;margin-right:15px;' %>設定
								</div>
							<% end %>
							<div style="height:30px"></div>
		          			<a href="#" data-toggle="modal" data-target="#myModal_half_profile_share">
								<div class="btn_half_item">  						
									<%= image_tag "share_FAFAFA.svg", :style =>'width:18px;height:18px;margin-right:15px;' %>シェアする
								</div>
							</a>	
							<div style="height:90px"></div>	
						</div>
					</div>
				</div>
          	</div>
          	<div class="a13" style="text-align:center;">
          		<a href="#" data-toggle="modal" data-dismiss="modal">
					<div class="btn_half_close">  
						<%= image_tag "ban_FAFAFA.svg", :style =>'width:20px;height:20px;margin-top:-2px;margin-right:5px;' %>キャンセル
					</div>
			  	</a>
          	</div>
        </div>
	</div>
</div>

<%#モーダルlazyload%>
<script defer>
	$('#myModal_half_profile').on("show.bs.modal", function () {
    	$('img.lazyload_Modal_half_profile').lazyload();
    });      
</script>
<%#モーダルtubolinks不具合修正%>
<script defer>
	$(function(){
		var display = $('#myModal_half_profile').css('display');
		//モーダルが表示されているのに表示判定されてなかったら
		if(display === 'block'){
			//モーダルを表示状態にする
			$('body').removeClass('modal-open');
				$('.modal-backdrop').remove();				
			$('#myModal_half_profile').modal('toggle');
			//クリックでモーダルを閉じる 
			$('#myModal_half_profile').on("click",function(){
				$('body').removeClass('modal-open');
			  	$('.modal-backdrop').remove();
				$('#myModal_half_profile').modal('hide'); 
			});
		}				
	});
</script>