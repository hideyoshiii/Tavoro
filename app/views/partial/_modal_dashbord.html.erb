<div class="modal top fade" id="myModal_dashbord">
  <div class="modal-dialog">
    <div class="a1">
      <div class="a4">
        <div class="d1">
          <div class="d7"></div>
          <% if @mylist = List.find_by(user_id: current_user.id, title: "プロフィール") %>
              <% if @mylist_item = ListItem.find_by(list_id: @mylist.id) %>
                <img data-src="<%= @mylist_item.post.image_url %>" class="img_myboom lazyload_modal_dashbord %>">
              <% else %>
                <%#myboomのデフォルト画像%>
              <% end %>
            <% else %>
              <%#myboomのデフォルト画像%>
            <% end %>
        </div>
      </div>
      <div class="a11">
        <div class="font_white" style="margin:10px;width:35%;display:inline-block;opacity:0.5;">
          <div class="contain_title02">
            <% if @mylist_item.present? %>
              <div>
                <% if @mylist_item.post.category == "movie" %>
                  <%= image_tag "movie_white.png", :class =>'icon_category' %> <%= @mylist_item.post.title %>
                <% end %>
                <% if @mylist_item.post.category == "tv" %>
                  <%= image_tag "movie_white.png", :class =>'icon_category' %> <%= @mylist_item.post.title %>
                <% end %>
                <% if @mylist_item.post.category == "book" %>
                  <%= image_tag "book_white.png", :class =>'icon_category' %> <%= @mylist_item.post.title %>
                <% end %>
                <% if @mylist_item.post.category == "comic" %>
                  <%= image_tag "book_white.png", :class =>'icon_category' %> <%= @mylist_item.post.title %>
                <% end %>
                <% if @mylist_item.post.category == "music" %>
                  <%= image_tag "music_white.png", :class =>'icon_category' %> <%= @mylist_item.post.title %>
                <% end %>
              </div>
            <% else %>
              <div>
                <%#myboomが設定されていません%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="a8">    
        <div style="width:100%;"> 
          <div class="inline_block_bottom" style="width:27.5%;">
            <%= link_to "/users/following" do %>              
              <div style="font-size:11px;color:#C2C2C2;border-bottom: solid 1px rgba(5,98,123,0.8);margin-bottom:1vh;">
                  <%= current_user.followings.size %> followings
              </div> 
            <% end %>
          </div>       
          <div class="inline_block_bottom" style="width:45%;">
            <div style="text-align:center;">
              <% if current_user.image.present? %>
                <img data-src="<%= current_user.image(:large) %>" class="img_user08 lazyload_modal_dashbord">
              <% else %>
                <img  data-src="/assets/user09.png" class="img_user08 lazyload_modal_dashbord">
              <% end %>
            </div>
            <div style="font-size:18px;text-align:center;margin-top:10px;">
              <%= current_user.name %>
              <% if current_user.authority == "public" %>
                <%= image_tag "test55.png", :style =>'width:14px;height:14px;' %>
              <% end %>
            </div>
          </div>
          <div class="inline_block_bottom" style="width:27.5%;">
            <%= link_to "/users/follower" do %>   
              <div style="font-size:11px;color:#C2C2C2;border-bottom: solid 1px rgba(5,98,123,0.8);margin-bottom:1vh;">
                  <%= current_user.followers.size %> followers
              </div> 
            <% end %>
          </div>           
        </div>   
        <% if current_user.description.present? %>
          <div style="height:0.5vh;"></div>
          <div class="font_gray_min" style="width:50%;color:#C2C2C2;display:inline-block;">
            <%= simple_format(current_user.description, {}, wrapper_tag: "div") %>
          </div>
        <% else %>
          <div style="height:1vh;"></div>
          <%= link_to edit_user_registration_path do %>
            <div class="font_gray_min" style="width:50%;color:#2FB4B4;display:inline-block;">
              自己紹介を書く
            </div>
          <% end %>
        <% end %>
        <div style="height:4vh;"></div>
        <div style="text-align:center;">
          <div class="inline_block_top">
            <%= link_to configuration_path do %>
              <div class="btn_follow_on">
                <%= image_tag "control_white.png", :style =>'width:13px;height:13px;margin:-3px 5px 0px -3px;' %>
                <span style="font-weight:bold;opacity:0.7;letter-spacing:1px;">設定</span>
              </div>
            <% end %>
          </div>
        </div>    
        <div style="height:7vh;"></div>  
        <div style="text-align:center;width:95%;display:inline-block;">
          <div class="inline_block_middle" style="width:33.33%;">
            <%= link_to "/#{current_user.username}/posts" do %>
              <div>
                <%= image_tag "checked_white.png", :style =>'width:16px;height:16px;' %>
              </div> 
              <div style="font-size:12px;color:#C2C2C2;margin-top:5px;">
                <%= Post.where(user_id: current_user.id).where.not(review: "bookmark").size %> checkeds
              </div>
            <% end %> 
          </div>
          <div class="inline_block_middle" style="width:33.33%;">
            <%= link_to "/#{current_user.username}/bookmarks" do %>
              <div>
                <%= image_tag "bookmark_white.png", :style =>'width:16px;height:16px;' %>
              </div> 
              <div style="font-size:12px;color:#C2C2C2;margin-top:5px;">
                <%= Post.where(user_id: current_user.id, review: "bookmark").size %> bookmarks
              </div> 
            <% end %> 
          </div>
          <div class="inline_block_middle" style="width:33.33%;opacity:0.5;">
            <div>
              <%= image_tag "file_white.png", :style =>'width:16px;height:16px;' %>
            </div> 
            <div style="font-size:12px;color:#C2C2C2;margin-top:5px;">
              coming soon
            </div> 
          </div>
        </div>  
        <div style="height:10vh;"></div>
      </div>
      <div class="a10">
        <div class="inline_block_middle" style="width:100%;">
          <a data-dismiss="modal" id="dismiss_dashbord">
            <%= image_tag "close_blue.png", :class =>'img_left02' %>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%#lazyload.js%>
<script defer>
  $('#myModal_dashbord').on("show.bs.modal", function () {
      $('img.lazyload_modal_dashbord').lazyload();
    });      
</script>
<%#モーダルtubolinks不具合修正%>
<script defer>
  $(function(){
    var display_dashbord = $('#myModal_dashbord').css('display');
    //モーダルが表示されているのに表示判定されてなかったら
    if(display_dashbord === 'block'){
      //モーダルを表示状態にする        
      $('body').removeClass('modal-open');
      $('.modal-backdrop').remove();
      $('#myModal_dashbord').modal('toggle');
      //クリックでモーダルを閉じる 
      $('#dismiss_dashbord').on("click",function(){
        $('body').removeClass('modal-open');
          $('.modal-backdrop').remove();
        $('#myModal_dashbord').modal('hide'); 
      });
    }       
  });
</script>