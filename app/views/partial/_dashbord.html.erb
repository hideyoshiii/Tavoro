<% if user_signed_in? %>
  <div class="modal fade" id="myModal_dashbord">
    <div class="height_modal"></div>
      <div class="modal-dialog">
        <div class="a1">
          <div class="a4">
            <div class="d1">
              <div class="d5"></div>
            </div>
          </div>
          <div class="a5">
            <div class="e1">
              <div class="e2">
                <div style="width:100%;">
                  <div style="text-align:center;">
                    <% if current_user.image.blank?  %>
                      <%= image_tag "user09.png", :class =>'img_user08' %>
                    <% else %>
                      <%= image_tag current_user.image, :class => "img_user08" %>
                    <% end %>
                  </div>
                  <div style="font-size:18px;text-align:center;margin-top:10px;">
                    <%= current_user.name %>
                  </div>
                </div>    
                <% if current_user.description.present? %>
                  <div style="height:2vh;"></div>
                  <div class="font_white" style="width:100%;padding:0 20px;">
                      <%= simple_format(current_user.description, {}, wrapper_tag: "div") %>
                  </div>
                  <div style="height:2vh;"></div>
                  <div style="text-align:center;">
                    <%= link_to edit_user_registration_path, :style => "font-size:11px;color:rgba(39,134,160,1);" do %>
                        プロフィールを編集
                    <% end %>
                  </div>
                <% else %>
                  <div style="height:2vh;"></div>
                  <div style="text-align:center;">
                    <%= link_to edit_user_registration_path, :style => "font-size:11px;color:rgba(39,134,160,1);" do %>
                        プロフィールを編集
                    <% end %>
                  </div>
                <% end %>                  
                <div style="height:5vh;"></div>
                <div style="text-align:center;width:100%;">
                  <div class="pro20">
                    <%= link_to "/users/following" do %>
                        <div style="font-size:15px;color:rgba(220,220,220,0.6);">
                          <%= current_user.followings.count %>
                        </div> 
                      <div style="font-size:12px;color:#FAFAFA;margin-top:5px;">
                          followings
                      </div> 
                     <% end %>
                  </div>
                  <div class="pro20">
                    <%= link_to "/users/follower" do %>
                        <div style="font-size:15px;color:rgba(220,220,220,0.6);">
                          <%= current_user.followers.count %>
                        </div> 
                      <div style="font-size:12px;color:#FAFAFA;margin-top:5px;">
                          followers
                      </div> 
                     <% end %>
                  </div>
                </div>
                <div style="height:7vh;"></div>
                <div style="text-align:center;width:100%;">
                  <div class="pro20">
                    <%= link_to "/users/user" do %>
                      <div>
                        <%= image_tag "test36.png", :style =>'width:20px;height:20px;opacity:0.6;' %>
                      </div>
                      <div style="font-size:10px;margin-top:10px;color:#FAFAFA;">
                        友達を探す
                      </div>
                    <% end %>
                  </div>
                  <div class="pro20">
                    <%= link_to "/users/follow_request" do %>
                      <div>
                        <%= image_tag "test37.png", :style =>'width:20px;height:20px;opacity:0.6;' %>
                      </div>
                      <div style="font-size:10px;margin-top:10px;color:#FAFAFA;">
                        <% @requesters_i = current_user.requesters.count %>
                        <% if @requesters_i >= 1 %>
                          <span style="color:rgba(251, 71, 71, 0.85);font-weight:bold;">
                            <%= @requesters_i %>
                          </span>
                        <% end %>
                        リクエスト
                      </div>
                    <% end %>
                  </div>
                  <div class="pro20">
                    <%= link_to "/users/configuration" do %>
                      <div>
                        <%= image_tag "test38.png", :style =>'width:20px;height:20px;opacity:0.6;' %>
                      </div>
                      <div style="font-size:10px;margin-top:10px;color:#FAFAFA;">
                        設定
                      </div>
                    <% end %>
                  </div>         
                </div> 
                <div style="height:7vh;"></div>            
              </div>
              <div class="e5">
                  <div class="pro19">             
                    <a href="" data-dismiss="modal">
                      <%= image_tag "close_blue.png", :class =>'img_left02' %>
                    </a>
                  </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>