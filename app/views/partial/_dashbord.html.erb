<div class="modal fade" id="myModal_dashbord">
  <div class="height_modal"></div>
    <div class="modal-dialog">
      <div class="a1">
        <div class="a4">
          <div class="d1">
            <div class="d5"></div>
          </div>
        </div>
        <div class="a5">
          <div class="e1">
            <div class="e2">
              <div style="width:100%;">       
                <div style="width:100%;">
                  <div style="text-align:center;">
                      <%= image_tag current_user.image(:large), :class => "img_user08" %>
                  </div>
                  <div style="font-size:18px;text-align:center;margin-top:10px;">
                    <%= current_user.name %>
                  </div>
                </div>          
              </div>     
              <% if current_user.description.present? %>
                <div style="height:0.5vh;"></div>
                <div class="font_gray_min" style="width:100%;padding:0 20px;color:#C2C2C2;">
                  <%= simple_format(current_user.description, {}, wrapper_tag: "div") %>
                </div>
              <% end %>                                 
              <div style="height:3vh;"></div>
              <div style="text-align:center;">
                <%= link_to "/users/#{current_user.id}/collection", :style => "display:inline-block;vertical-align:top;margin:0 5px;" do %>
                  <div class="btn_follow_on">
                    <%= image_tag "test44.png", :style =>'width:16px;height:16px;margin-top:-3.5px;' %>&nbsp;&nbsp;投稿へ
                  </div>
                <% end %>
                <div style="display:inline-block;vertical-align:top;">
                  <%= link_to "/users/configuration" do %>
                    <div class="btn_follow_on" style="padding-left:1.0em;padding-right:1.0em;">
                      <%= image_tag "test53.png", :style =>'width:14px;height:14px;margin-top:-2px' %>        
                    </div>
                  <% end %>
                </div>
              </div>              
              <div style="height:5vh;"></div>
              <div style="text-align:center;width:100%;">
                <div class="pro20">
                  <%= link_to "/users/following" do %>
                    <div style="font-size:18px;color:#FAFAFA;">
                      <%= current_user.followings.size %>
                    </div> 
                    <div style="font-size:12px;color:#C2C2C2;margin-top:0px;">
                        followings
                    </div> 
                  <% end %>
                </div>
                <div class="pro20">
                  <%= link_to "/users/follower" do %>
                    <div style="font-size:18px;color:#FAFAFA">
                      <%= current_user.followers.size %>
                    </div> 
                    <div style="font-size:12px;color:#C2C2C2;margin-top:0px;">
                        followers
                    </div> 
                  <% end %>
                </div> 
              </div>  
              <div style="height:7vh;"></div>  
              <div style="text-align:center;width:100%;">
                <div class="pro20">
                  <div>
                    <%= image_tag "checked.png", :style =>'width:18px;height:18px;' %>
                  </div> 
                  <div style="font-size:12px;color:#C2C2C2;margin-top:5px;">
                    <%= Post.where(user_id: current_user.id).where.not(review: "bookmark").size %> checkeds
                  </div> 
                </div>
                <div class="pro20">
                  <div>
                    <%= image_tag "bookmark.png", :style =>'width:18px;height:18px;' %>
                  </div> 
                  <div style="font-size:12px;color:#C2C2C2;margin-top:5px;">
                    <%= Post.where(user_id: current_user.id, review: "bookmark").size %> bookmarks
                  </div> 
                </div>
                <div class="pro20">
                  <div>
                    <%= image_tag "test51.png", :style =>'width:18px;height:18px;' %>
                  </div> 
                  <div style="font-size:12px;color:#C2C2C2;margin-top:5px;">
                    coming soon
                  </div> 
                </div>
              </div>  
              <div style="height:10vh;"></div>
            </div>
            <div class="e5">
            <div class="pro19">             
              <a href="" data-dismiss="modal">
                <%= image_tag "close_blue.png", :class =>'img_left02' %>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>