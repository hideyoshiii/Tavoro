<% if user_signed_in? %>
	<% if Like.find_by(user_id: current_user.id, post_id: post.id) %>
		<%= link_to "/likes/#{post.id}/destroy", method: :post, remote: true do %>
			<div class="inline_block_bottom like_on">
				<%= image_tag "like_FB473E.svg", :style =>'width:20px;height:20px;' %>	
			</div>					
			<div class="inline_block_bottom" style="font-size:10px;padding-left:5px;color:#FAFAFA;opacity:0.5;">
				<%= Like.where(post_id: post.id).size %>
			</div>
		<% end %>
	<% else %>
		<%= link_to "/likes/#{post.id}/create", method: :post, remote: true do %>
			<div class="inline_block_bottom like_off">
				<%= image_tag "like_FAFAFA.svg", :style =>'width:20px;height:20px;' %>
			</div>								
			<div class="inline_block_bottom" style="font-size:10px;padding-left:5px;color:#FAFAFA;opacity:0.5;">
				<%= Like.where(post_id: post.id).size %>
			</div>
		<% end %>
	<% end %>
<% else %>
	<%= link_to "/likes/#{post.id}/create", method: :post do %>
		<div class="inline_block_bottom like_off">
			<%= image_tag "like_FAFAFA.svg", :style =>'width:20px;height:20px;' %>	
		</div>						
		<div class="inline_block_bottom" style="font-size:10px;padding-left:5px;color:#FAFAFA;opacity:0.5;">
			<%= Like.where(post_id: post.id).size %>
		</div>
	<% end %>
<% end %>