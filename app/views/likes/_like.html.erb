<% if user_signed_in? %>
	<% if Like.find_by(user_id: current_user.id, post_id: post.id) %>
		<%= link_to "/likes/#{post.id}/destroy", method: :post, remote: true do %>
			<%= image_tag "like_FB473E.svg", :style =>'width:22px;height:22px;opacity:0.5;' %>							
			<div class="inline_block_middle" style="font-size:12px;padding-left:5px;color:#FAFAFA;opacity:0.4;">
				<%= Like.where(post_id: post.id).size %>
			</div>
		<% end %>
	<% else %>
		<%= link_to "/likes/#{post.id}/create", method: :post, remote: true do %>
			<%= image_tag "like_FAFAFA.svg", :style =>'width:22px;height:22px;opacity:0.4;' %>							
			<div class="inline_block_middle" style="font-size:12px;padding-left:5px;color:#FAFAFA;opacity:0.4;">
				<%= Like.where(post_id: post.id).size %>
			</div>
		<% end %>
	<% end %>
<% else %>
	<%= link_to "/likes/#{post.id}/create", method: :post, remote: true do %>
